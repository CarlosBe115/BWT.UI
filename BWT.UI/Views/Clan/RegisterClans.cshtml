
@{
    ViewData["Title"] = "RegisterClans";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}
<div class="pagetitle">
    <h1>Crear Clan</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="../Dash/Index">Home</a></li>
            <li class="breadcrumb-item">Clanes</li>
            <li class="breadcrumb-item active">Crear Clan</li>
        </ol>
    </nav>
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Creación de Clan</h5>
                    <!-- Multi Columns Form -->
                    <p class="text-danger">
                        @TempData["message"]
                    </p>
                    <form class="row g-3" method="post" asp-controller="Clan" asp-action="Create">
                        <div class="col-md-12">
                            <label for="inputName5" class="form-label">Nombre del Clan</label>
                            <input type="text" class="form-control" name="NameClan">
                        </div>
                        <div class="col-md-6">
                            <label for="inputEmail5" class="form-label">Abreviación</label>
                            <input type="email" class="form-control" name="Abbreviation">
                        </div>
                        <div class="col-md-6">
                            <label for="inputPassword5" class="form-label">Descripción del clan</label>
                            <input type="password" class="form-control" name="DescriptionClan">
                        </div>
                        <div class="col-12">
                            <label for="inputAddress5" class="form-label">Fecha de creación</label>
                            <input type="date" class="form-control" id="inputAddres5s" placeholder="Descripción" name="CreationClan">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Crear</button>
                            <button type="reset" class="btn btn-secondary">Cancelar</button>
                        </div>
                    </form><!-- End Multi Columns Form -->
                </div>
            </div>
        </div>
    </div>
</section>



